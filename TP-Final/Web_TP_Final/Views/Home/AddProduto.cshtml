@model Produto
@{ Layout = "_Layout"; ViewBag.Title = "Adicionar um Produto";}

<h2>Adicionar um Produto <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a></h2>
<form asp-action="AddProduto" method="post">
    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input class="form-control" name="Nome" />
    </div>
    <div class="form-group">
        <label for="Preco">Preço:</label>
        <input class="form-control" name="Preco" />
    </div>
    <div class="form-group">
        <label for="Status">Status:</label>
        @Html.EditorFor(x => x.Status)
    </div>
    <div class="form-group">
        <label for="IdUsuarioCadastro">Id Usuario:</label>
        <input class="form-control" name="IdUsuarioCadastro" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Adicionar</button>
    </div>
</form>